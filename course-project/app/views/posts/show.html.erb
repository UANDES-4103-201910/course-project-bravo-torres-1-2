<div class = "postshow">
<div class="row" style=" margin-left: 30px;">
  <div class="span8">
    <div class="row" style="margin-top: 30px;">
      <div class="span8">
        <h4><strong><a>  Title:  <%= @post.title%></a></strong></h4>
      </div>
    </div>
    <div class="row">
      <div class="span2">
        <a href="#" class="thumbnail">
            <img src="http://placehold.it/260x180" style = "width: 180px; height: 150px;">
        </a>
      </div>
      <div class="span6" style = "margin-left: 20px; width: 600px; text-align: left;">      
      		 <%= @post.text%>
     </div>
     <div class="span8" style ="    height: 100px;
    margin-left: 5px;
    width: 300px;
    padding-top: 20px;">
     	 <p style = "margin-left: -70px;">By: <%=@post.user.name%></p>
     <p> Created At: <%= @post.created_at = DateTime.now().strftime("%d/%m/%Y At %I:%M%p")%></p>
     	 
     </div>
</div>
</div>
</div>
<div class = "row" style=" margin-left: 30px;">
<%= button_to "New Comments", new_comment_path %>
</div>